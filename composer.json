{
    "name": "paysera/commission-calculator",
    "description": "Commission Calculator for various clients of Paysera",
    "keywords": ["paysera", "calculator", "commission", "clients"],
    "type": "project",
    "autoload": {
        "psr-4": {
            "Paysera\\CommissionTask\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Paysera\\CommissionTask\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0",
        "ext-bcmath": "*",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.5",
        "vlucas/phpdotenv": "^4.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "friendsofphp/php-cs-fixer": "2.16"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "create-env": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "script": "@php script.php input.csv",
        "phpcs": "phpcs --standard=PSR12 ./src",
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["@phpunit", "@test-cs"]
    }
}
